<%- include('../partials/head.ejs')%>
<body>
  <header><%- include ('../partials/nav.ejs')%>
    <h3>üè† Register Your Home With Us</h3></header>
 <%- include('../partials/validationErr.ejs') %>
  <main>
    <form action="/reg-home" method="post">
      <ul>
        <li>
          <label for="houseName">House Name</label>
          <input type="text" id="houseName" placeholder="Enter a catchy name for your property" name="houseName" required>
        </li>
         <li>
          <label for="price">Price (per night)</label>
          <input type="text" id="price" placeholder="e.g., 2500" name="price" required>
        </li>
         <li>
          <label for="contactNo">Contact Number</label>
          <input type="text" id="contactNo" placeholder="e.g., 9876543210" name="contactNo" required>
          
        </li>
        <li>
          <label for="address">Full Address</label>
          <input type="text" id="address" placeholder="Street address, city, state, postal code" name="address" required>

        </li>
        <li>
          <label for="homeimg">Property Image</label>
          <input type="file" id="homeimg"  name="image" accept="image/*">
          
        </li>
        <li>
          <label for="description">Property Description</label>
          <input type="text" placeholder="Describe amenities, features, and highlights of your place" name="description" id="description" maxlength="1000">
        </li>
        <li>
          <button type="submit">‚ú® Register Property</button>
        </li>

      </ul>
    </form>
  </main>
  
</body>
</html>