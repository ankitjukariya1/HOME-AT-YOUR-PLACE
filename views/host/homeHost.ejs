<%- include('../partials/head.ejs')%>
<body>
  <header>
    <%- include('../partials/nav.ejs') %>
    <h1>Welcome to HOME AT YOUR PLACE</h1>
  </header>
  <main class="houses-container">
    <%  houses.forEach(house => { %>
       <div class="house-card">
        
         <img src="<%=house.image %>" alt="House image"> 
         <div class="card-content">
          <p class="houseName"><strong>House Name:</strong> <%=house.houseName %></p>
          <p class="house-price"><strong>Price:</strong> <%= house.price %></p> 
          <p class="house-location"><strong>Location:</strong> <%= house.address %></p>
          <p class="contact"><strong>Contact:</strong> <%= house.contactNo %></p>
          <p class="description"><strong>Description:</strong> <%= house.description %></p>
          <div class="card-links">
            <form action="/home/home-edit/<%= house.id %>" method="post">
              <input type="hidden" name="id" value="<%= house.id %>">
              <button type="submit" class="edit">Edit</button>
            </form>
            <form action="/host" method="post">
              <input type="hidden" name="id" value="<%= house.id %>">
              <input type="hidden" name="action" value="delete">
              <button type="submit" class="delete">Delete</button>
            </form>
            
          </div>
         </div>
       </div>
       
    <%})%>
  </main>
  
</body>
</html>